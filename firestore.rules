rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && request.auth.token.admin == true;
    }
    
    // Translations collection - read for all authenticated users, write for admins
    match /translations/{translationId} {
      // Allow read for authenticated users
      allow read: if isAuthenticated();
      
      // Allow write for admins
      allow write: if isAdmin();
      
      // Allow create for any authenticated user (for initial uploads)
      allow create: if isAuthenticated();
    }
    
    // Projection channels - public read, authenticated write
    match /channels/{channelId} {
      // Allow public read (for projector displays)
      allow read: if true;
      
      // Allow write for authenticated users
      allow write: if isAuthenticated();
    }
    
    // Users collection - users can read/update their own profile
    match /users/{userId} {
      // Allow users to read their own document
      allow read: if isAuthenticated() && request.auth.uid == userId;
      
      // Allow users to create their own profile
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Allow users to update their own profile (but not role)
      allow update: if isAuthenticated() && request.auth.uid == userId && 
                   !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']);
      
      // Allow admins to read any user document (for user management)
      allow read: if isAdmin();
      
      // Allow admins to update any user document (including role)
      allow update: if isAdmin();

      // Subcollection: bookmarks — user can manage their own
      match /bookmarks/{bookmarkId} {
        allow read: if isAuthenticated() && request.auth.uid == userId;
        allow create: if isAuthenticated() && request.auth.uid == userId;
        allow delete: if isAuthenticated() && request.auth.uid == userId;
        allow update: if false; // not used; recreate to modify
      }

      // Subcollection: readingHistory — user can read and write their own
      match /readingHistory/{entryId} {
        allow read: if isAuthenticated() && request.auth.uid == userId;
        allow create: if isAuthenticated() && request.auth.uid == userId;
        allow update: if isAuthenticated() && request.auth.uid == userId;
      }
    }
  }
}

