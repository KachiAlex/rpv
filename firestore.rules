rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && request.auth.token.admin == true;
    }
    
    // Translations collection - public read, authenticated write
    match /translations/{translationId} {
      // Allow public read (translations are public)
      allow read: if true;
      
      // Allow write for admins (full control)
      allow write: if isAdmin();
      
      // Allow create for any authenticated user (for initial uploads)
      allow create: if isAuthenticated();
      
      // Allow update for authenticated users (to update metadata like updatedAt)
      // This allows users to add books/chapters to their translations
      allow update: if isAuthenticated();
      
      // Subcollections: books and chapters - public read, authenticated write
      match /books/{bookId} {
        allow read: if true;
        allow write: if isAuthenticated();
        
        match /chapters/{chapterId} {
          allow read: if true;
          allow write: if isAuthenticated();
        }
      }
    }
    
    // Projection channels - public read, authenticated write
    match /channels/{channelId} {
      // Allow public read (for projector displays)
      allow read: if true;
      
      // Allow write for authenticated users
      allow write: if isAuthenticated();
    }
    
    // Users collection - users can read/update their own profile
    match /users/{userId} {
      // Allow users to read their own document
      allow read: if isAuthenticated() && request.auth.uid == userId;
      
      // Allow users to create their own profile
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Allow users to update their own profile (preferences, displayName, etc.)
      // Only restrict if trying to change role from existing value to different value
      allow update: if isAuthenticated() && request.auth.uid == userId;
      
      // Additional check: prevent non-admins from changing their role
      // This is enforced by checking if role field is being changed
      // If role is being changed AND user is not admin, deny
      // Note: This is checked in the app logic, but we can add a rule as backup
      
      // Allow admins to read any user document (for user management)
      allow read: if isAdmin();
      
      // Allow admins to update any user document (including role)
      allow update: if isAdmin();

      // Subcollection: bookmarks — user can manage their own
      match /bookmarks/{bookmarkId} {
        allow read: if isAuthenticated() && request.auth.uid == userId;
        allow create: if isAuthenticated() && request.auth.uid == userId;
        allow delete: if isAuthenticated() && request.auth.uid == userId;
        allow update: if false; // not used; recreate to modify
      }

      // Subcollection: readingHistory — user can read and write their own
      match /readingHistory/{entryId} {
        allow read: if isAuthenticated() && request.auth.uid == userId;
        allow create: if isAuthenticated() && request.auth.uid == userId;
        allow update: if isAuthenticated() && request.auth.uid == userId;
      }

      // Subcollection: highlights — user can manage their own
      match /highlights/{highlightId} {
        allow read: if isAuthenticated() && request.auth.uid == userId;
        allow create: if isAuthenticated() && request.auth.uid == userId;
        allow update: if isAuthenticated() && request.auth.uid == userId;
        allow delete: if isAuthenticated() && request.auth.uid == userId;
      }

      // Subcollection: readingPlanProgress — user can manage their own
      match /readingPlanProgress/{progressId} {
        allow read: if isAuthenticated() && request.auth.uid == userId;
        allow create: if isAuthenticated() && request.auth.uid == userId;
        allow update: if isAuthenticated() && request.auth.uid == userId;
        allow delete: if isAuthenticated() && request.auth.uid == userId;
      }

      // Subcollection: bookProgress — user can manage their own
      match /bookProgress/{progressId} {
        allow read: if isAuthenticated() && request.auth.uid == userId;
        allow create: if isAuthenticated() && request.auth.uid == userId;
        allow update: if isAuthenticated() && request.auth.uid == userId;
        allow delete: if isAuthenticated() && request.auth.uid == userId;
      }

      // Subcollection: bookmarkFolders — user can manage their own
      match /bookmarkFolders/{folderId} {
        allow read: if isAuthenticated() && request.auth.uid == userId;
        allow create: if isAuthenticated() && request.auth.uid == userId;
        allow update: if isAuthenticated() && request.auth.uid == userId;
        allow delete: if isAuthenticated() && request.auth.uid == userId;
      }
    }

    // Reading Plans collection - public read, admin write
    match /readingPlans/{planId} {
      allow read: if true; // Public reading plans
      allow write: if isAdmin(); // Only admins can create/update plans
    }

    // Cross-References collection - public read, admin write
    match /crossReferences/{refId} {
      allow read: if true; // Public cross-references
      allow write: if isAdmin(); // Only admins can create/update cross-references
    }
  }
}

